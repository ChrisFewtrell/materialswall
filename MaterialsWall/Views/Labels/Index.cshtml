@using System.Data.Common
@model IEnumerable<Granta.MaterialsWall.DataAccess.Card>

<style>
.walllabel {
    border: 1px solid black;
    width: 580px;
    height: 140px;
    page-break-inside: avoid;
}    

.walllabel div {
    margin-bottom: 8px;
    padding: 3px;
}

.walllabel img {
    float: right;
}

.walllabel .details {
    xfloat: left;
}

.materialname {
    font-family: Helvetica, Arial, sans-serif;
    color: #333;
    font-weight: bold;
    font-size: 22px;
}

.materialpath {
    color: #cc6633;
    font-weight: bold;
    font-size: 14px;
    text-wrap: normal;
}

.materialsource {
    color: #666;
    font-weight: bold;
    font-size: 14px;
}
</style>

@foreach (var card in @Model)
{
    <div class="walllabel">
        <img src="@Url.Action("Image", "Labels", new { identifier = @card.Identifier})"/>
        <div class="details">
            <div class="materialname">@card.Name</div>
            <div class="materialpath">@card.Path</div>
        
            @if (!string.IsNullOrWhiteSpace(card.Source))
            {
                <div class="materialsource">Source: @card.Source</div>
            }
        </div>
    </div>
}
